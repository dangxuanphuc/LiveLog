<% provide :title, "Login" %>
<header class="page-header">
  <h2>Login</h2>
</header>
<%= form_for :session, url: login_path, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.email_field :email, class: "form-control", placeholder: "example@livelog.com" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-3 control-label" %>
    <div class="col-sm-9">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %>
          Remember me
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  </div>
  <%= link_to "Forgot password", new_password_reset_path, class: "password-reset" %></p>
  <p>New user?
  <%= link_to "Sign up now!", signup_path %>
<% end %>
