<% provide :title, "Live List" %>
<header class="page-header">
  <h2>Live List</h2>
</header>
<% @lives.first.nendo.downto(@lives.last.nendo).each_slice(2) do |two_y| %>
  <div class="row">
    <% two_y.each do |y| %>
      <% y_live = @lives.where(date: nendo_range(y)) %>
      <% if y_live.exists? %>
        <div class="col-sm-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= y %></h3>
            </div>
            <table class="table table-hover">
              <tbody>
                <%= render y_live %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
